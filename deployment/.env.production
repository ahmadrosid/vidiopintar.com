# Simple Production Environment Variables
# Connect directly to Neon Database - No local PostgreSQL needed

NODE_ENV=production

# Neon Database Configuration
DATABASE_URL=

# API Keys
OPENAI_API_KEY=your_openai_api_key
GOOGLE_GENERATIVE_AI_API_KEY=your_google_api_key
JIGSAWSTACK_API_KEY=your_jigsawstack_api_key

# Supabase (if using)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# Authentication
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
BETTER_AUTH_SECRET=your_auth_secret_key
BETTER_AUTH_URL=https://your-domain.com

# GitHub Container Registry (for deployment script)
GITHUB_REPOSITORY=ahmadrosid/vidiopintar.com